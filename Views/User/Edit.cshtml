@{
@using MVC.Models;
@model User;
<style>
    form span{
        color: rgb(162, 33, 33);
        font-weight: 600;
    }
</style>
<p>@ViewData["message"]</p>
<div style=" width:25vw; margin:auto;" >
<h1>Create User</h1>
<form asp-controller="User" asp-action="UpdateUser" style="display: grid; gap:10px;">
    <label asp-for="username">Username</label>
    <input type="text" asp-for="username" />
    <span asp-validation-for="username"></span>

    <label asp-for="email">Email</label>
    <input type="text" asp-for="email" />
    <span asp-validation-for="email"></span>

    <label asp-for="role">Role</label>
    <input type="text" asp-for="role" />
    <span asp-validation-for="role"></span>

    <label asp-for="Id">ID</label>
    <input type="text" asp-for="Id" />
    <span asp-validation-for="Id"></span>



    <input type="submit" class="btn btn-success" value="Add User" >
</form>
</div>
}
