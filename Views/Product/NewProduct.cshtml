@{
@using MVC.Models;
@model Products;
<style>
    form span{
        color: rgb(162, 33, 33);
        font-weight: 600;
    }
</style>
<p>Product Name @ViewData["product"]</p>
<div style=" width:25vw; margin:auto;" >
<h1>Create Product</h1>
<form asp-controller="Product" asp-action="NewProduct" style="display: grid; gap:10px;">
    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Code">Code</label>
    <input type="text" asp-for="Code" />
    <span asp-validation-for="Code"></span>

    <label asp-for="ID">ID</label>
    <input type="text" asp-for="ID" />
    <span asp-validation-for="ID"></span>

    <label asp-for="Price">Price</label>
    <input type="text" asp-for="Price" />
    <span asp-validation-for="Price"></span>

    <input type="submit" value="Add Product" >
</form>
</div>
}
